<?xml version="1.0" encoding="UTF-8"?>
<modules>
	<module>
		<id>blocktest</id>
		<name>@NAME@</name>
		<description>@DESCRIPTION@</description>
		<version>@VERSION@</version>
		<license>license.html</license>
		<requiredignitionversion>7.7.0</requiredignitionversion>
		<requiredframeworkversion>5</requiredframeworkversion>
		<freemodule>true</freemodule>
		<documentation>index.html</documentation>

		<!-- Add the module dependencies for each scope -->
		<!-- NOTE: Build fails here if we specify a Gateway dependency -->
		<depends scope="D">fpmi</depends>
		
		<!-- Load in our jars for each scope -->
		<jar scope="CD">blt-test-client.jar.pack.gz</jar>
		<jar scope="D">blt-test-designer.jar.pack.gz</jar>
		<jar scope="D">blt-test-common.jar.pack.gz</jar>
		<jar scope="G">blt-test-gateway.jar</jar>
		<jar scope="G">blt-common.jar</jar>
		<jar scope="GD">jackson-core-2.2.3.jar</jar>
		<jar scope="GD">jackson-databind-2.2.3.jar</jar>
		<jar scope="GD">jackson-annotations-2.2.3.jar</jar>
		<!-- Tell the Gateway and/or Designer where to find the hooks -->
		<hook scope="G">com.ils.blt.test.gateway.BLTTestGatewayHook</hook>
		<hook scope="D">com.ils.blt.test.designer.BLTTestDesignerHook</hook>
		<hook scope="C">com.ils.blt.test.client.BLTTestClientHook</hook>
	</module>
</modules>
