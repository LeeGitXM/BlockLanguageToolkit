<?xml version="1.0" encoding="UTF-8"?>
<modules>
	<module>
		<id>block</id>
		<name>@NAME@</name>
		<description>@DESCRIPTION@</description>
		<version>@VERSION@</version>
		<requiredignitionversion>7.7.0</requiredignitionversion>
		<requiredframeworkversion>5</requiredframeworkversion>
		<freemodule>true</freemodule>

		<!-- Add the module dependencies for each scope -->
		<!-- NOTE: Build fails here if we specify a Gateway dependency -->
		<depends scope="D">fpmi</depends>
		
		<!-- Load in our jars for each scope -->
		<jar scope="CD">blt-client.jar.pack.gz</jar>
		<jar scope="D">blt-designer.jar.pack.gz</jar>
		<jar scope="D">blt-common.jar.pack.gz</jar>
		<jar scope="G">blt-gateway.jar</jar>
		<jar scope="G">blt-common.jar</jar>
		<jar scope="G">block-definition.jar</jar>
		<jar scope="GD">gson-2.2.2.jar</jar>
		<jar scope="GCD">ils-common.jar</jar>
		<jar scope="GCD">jgraphx-2.1.0.jar</jar>
		<jar scope="CD">jgx.jar</jar>
		<!-- Tell the Gateway and/or Designer where to find the hooks -->
		<hook scope="G">com.ils.blt.gateway.BLTGatewayHook</hook>
		<hook scope="D">com.ils.blt.designer.BLTDesignerHook</hook>
		<hook scope="C">com.ils.blt.client.BLTClientHook</hook>
	</module>
</modules>
