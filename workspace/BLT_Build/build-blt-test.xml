<project name="BLTTestTModuleBuilder" basedir="../" default="BuildAndInstallModule">

	<import file="${basedir}/BLT_Build/build.xml"/>

	<property name="version.build" value="0" />	
	<!-- Change version.beta value to "" for release builds -->
	<property name="version.beta" value="-development" />		
	<property name="BLTTestModule.version" value="1.5.0.${version.build}" />
	<property name="BLTTestModule.name" value="BLTTest" />
	<property name="BLTTestModule.release" value="0.5" />
	<property name="BLTTestModule.description" value="Block Language Toolkit - Test" />
	<property name="root.dir" value="${basedir}/../.." />
	<property name="jar.dir" value="${root.dir}/external/lib" />
	<property name="sdk.dir" value="${root.dir}/ignition-77/lib" />
	<property name="common.jar.name" value="ils-common.jar" />
	<property name="common.bin.dir" value="${root.dir}/ils-common/bin" />
	<property name="common.src.dir" value="${root.dir}/ils-common/ILS_Common/src" />
	<property name="block.jar.name" value="block-definition.jar" />
	<property name="block.bin.dir" value="${root.dir}/blt/workspace/Block/bin" />
	<property name="block.src.dir" value="${root.dir}/blt/workspace/Block/src" />
	<property name="ant.build.javac.source" value="1.7"/>
	<property name="ant.build.javac.target" value="1.7"/>
		
	<!-- External jar classpath -->
	<path id="ils-classpath">
	   <fileset dir="${jar.dir}">
	      <include name="*.jar"/>
	   </fileset>
		<fileset dir="${sdk.dir}">
			 <include name="*.jar"/>
		</fileset>
	   <pathelement path="${build.dir}"/>
	</path>
	
	<!-- Block Definition jar classpath -->
	<!-- The gateway, designer and clients depend on the Common -->
	<path id="BlockDefinition.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
	</path>
	
	<!-- Common jar classpath -->
	<!-- The gateway, designer and clients depend on the Common -->
	<path id="BLTTest_Common.classpath">
		<path refid="Ignition_SDK.classpath" />
		<path refid="ExternalJar.classpath" />
	</path>
		
	<!-- Gateway jar classpath -->
	<path id="BLTTest_Gateway.classpath">
		<path refid="BLTTest_Common.classpath" />
		<path refid="ExternalJar.classpath" />
		<fileset dir="${basedir}/BLT_Build/bin/BLT_Common/dist/" includes="*.jar" />
		<fileset dir="${basedir}/BLT_Build/bin/BLT_Gateway/dist/" includes="*.jar" />
		<fileset dir="${basedir}/BLT_Build/bin/BLTTest_Common/dist/" includes="*.jar" />
		<fileset dir="${jar.dir}" includes="${block.jar.name}" />
	</path>	
	<!-- Client jar classpath -->
	<path id="BLTTest_Client.classpath">
		<path refid="BLTTest_Common.classpath" />
		<path refid="ExternalJar.classpath" />
		<fileset dir="${basedir}/BLT_Build/bin/BLTTest_Common/dist/" includes="*.jar" />
		<fileset dir="${jar.dir}" includes="${block.jar.name}" />
	</path>
	
	<!-- Designer jar classpath -->
	<path id="BLTTest_Designer.classpath">
		<path refid="BLTTest_Common.classpath" />
		<path refid="ExternalJar.classpath" />
		<fileset dir="${basedir}/BLT_Build/bin/BLTTest_Common/dist/" includes="*.jar" />
		<fileset dir="${basedir}/BLT_Build/bin/${BLTTestModule.name}_Client/dist/" includes="*.jar" />
		<fileset dir="${jar.dir}" includes="${block.jar.name}" />
	</path>
	
	<!-- This target will build the toolkit module and deploy it to the local Ignition gateway -->
		<target name="BuildAndInstallModule" depends="clean, build, deploy" />

	<!-- Cleans previously built files - except for BLT jar files  -->
	<target name="clean" description="Remove previous test build products" >
		<delete file="${basedir}/BLT_Build/modules/${BLTTestModule.name}-module-unsigned.modl" />
		<delete dir="${basedir}/BLT_Build/release" />
		<delete dir="${basedir}/BLT_Build/temp_modl" />
	</target>	
	
	<!-- Compile the Common library -->
	<target name="common.build" description="Compile the source">
		<echo  message="Using Java version ${ant.java.version}."/>
		<mkdir dir="${common.bin.dir}"/>
		<javac destdir="${common.bin.dir}" debug="true" includeantruntime="false">
			<src path="${common.src.dir}"/>
			<classpath refid="ils-classpath"/>
		</javac>
	</target>
	<target name ="common.jar" description="Create a jar for the ILS Common library">
	    <jar destfile="${jar.dir}/${common.jar.name}" includes="**/*.class" basedir="${common.bin.dir}"/>
	</target>
	
	<!-- Builds the toolkit module jars and the final .modl file -->
	<target name="build" depends="common.build,common.jar" description="Compile the source">
		<echo message="${BLTTestModule.name} ${BLTTestModule.version}" />	
		<delete dir="${basedir}/BLT_Build/temp_modl" />	
		
		<!-- build.date and version.build are both defined in build.xml -->
		<echo message="Build date: ${build.date}" />
		<echo message="Build version: ${version.build}" />	
				
		<!-- BLTTest Common jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${BLTTestModule.name}_Common" />
			<param name="sourceDirFolder" value="${BLTTestModule.name}_Common" />
			<param name="jarName" value="BLTTest-common" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="${BLTTestModule.name}_Common.classpath"/>
		</antcall>
		
		<!-- BLTTest Gateway jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${BLTTestModule.name}_Gateway" />
			<param name="sourceDirFolder" value="${BLTTestModule.name}_Gateway" />
			<param name="jarName" value="BLTTest-gateway" />
			<param name="javacSource" value="1.7" />
			<param name="[replace]BLTTestGateway.properties:Meta.Version" value="${version.build}" />
			<param name="[replace]BLTTestGateway.properties:Meta.ReleaseDate" value="${build.date}" />
			<param name="module.build.classpath" value="${BLTTestModule.name}_Gateway.classpath"/>
		</antcall>

		<!-- BLTTest Client jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${BLTTestModule.name}_Client" />
			<param name="sourceDirFolder" value="${BLTTestModule.name}_Client" />
			<param name="jarName" value="BLTTest-client" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="${BLTTestModule.name}_Client.classpath"/>
		</antcall>
		
		<!-- BLTTest Designer jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${BLTTestModule.name}_Designer" />
			<param name="sourceDirFolder" value="${BLTTestModule.name}_Designer" />
			<param name="jarName" value="BLTTest-designer" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="${BLTTestModule.name}_Designer.classpath"/>
		</antcall>
		
		<!-- Create .modl file -->
		<echo message="Making ${BLTTestModule.name} modl" />

		<mkdir dir="${basedir}/BLT_Build/temp_modl" />
		<mkdir dir="${basedir}/BLT_Build/modules" />
		

		<copy file="${basedir}/BLT_Build/module-blt-test.xml" tofile="${basedir}/BLT_Build/temp_modl/module.xml" overwrite="true" />

		<replace file="${basedir}/BLT_Build/temp_modl/module.xml" token="@NAME@" value="${BLTTestModule.name}" />
		<replace file="${basedir}/BLT_Build/temp_modl/module.xml" token="@DESCRIPTION@" value="${BLTTestModule.description}" />
		<replace file="${basedir}/BLT_Build/temp_modl/module.xml" token="@VERSION@" value="${BLTTestModule.version}" />

		<!-- Pack200 and then copy the designer, client jars -->
		<pack200 src="${basedir}/BLT_Build/bin/${BLTTestModule.name}_Client/dist/BLTTest-client.jar" destfile="${basedir}/BLT_Build/temp_modl/blt-test-client.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/BLT_Build/bin/${BLTTestModule.name}_Designer/dist/BLTTest-designer.jar" destfile="${basedir}/BLT_Build/temp_modl/blt-test-designer.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/BLT_Build/bin/${BLTTestModule.name}_Common/dist/BLTTest-common.jar" destfile="${basedir}/BLT_Build/temp_modl/blt-test-common.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/ils-common.jar" destfile="${basedir}/BLT_Build/temp_modl/ils-common.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/block-definition.jar" destfile="${basedir}/BLT_Build/temp_modl/block-definition.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/jackson-core-2.2.3.jar" destfile="${basedir}/BLT_Build/temp_modl/jackson-core-2.2.3.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/jackson-databind-2.2.3.jar" destfile="${basedir}/BLT_Build/temp_modl/jackson-databind-2.2.3.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/jackson-annotations-2.2.3.jar" destfile="${basedir}/BLT_Build/temp_modl/jackson-annotations-2.2.3.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		
		<!-- Copy gateway jar -->
		<copy file="${basedir}/BLT_Build/bin/${BLTTestModule.name}_Gateway/dist/BLTTest-gateway.jar" tofile="${basedir}/BLT_Build/temp_modl/blt-test-gateway.jar" />
		<copy file="${basedir}/BLT_Build/bin/${BLTTestModule.name}_Common/dist/BLTTest-common.jar" tofile="${basedir}/BLT_Build/temp_modl/blt-test-common.jar" />
		<copy file="${basedir}/BLT_Build/bin/BLT_Common/dist/blt-common.jar" todir="${basedir}/BLT_Build/temp_modl" />
		<copy file="${basedir}/BLT_Build/bin/BLT_Gateway/dist/blt-gateway.jar" todir="${basedir}/BLT_Build/temp_modl" />
		
		<!-- Copy dependent jars -->
		<copy file="${basedir}/../../external/lib/ils-common.jar" todir="${basedir}/BLT_Build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/jackson-core-2.2.3.jar" todir="${basedir}/BLT_Build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/jackson-databind-2.2.3.jar" todir="${basedir}/BLT_Build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/jackson-annotations-2.2.3.jar" todir="${basedir}/BLT_Build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/commons-math3-3.1.1.jar" todir="${basedir}/BLT_Build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/block-definition.jar" todir="${basedir}/BLT_Build/temp_modl/" />

		<!-- Copy license file and javadoc into the bundle -->
		<mkdir dir="${basedir}/BLT_Build/doc" />
		<copy file="${basedir}/BLT_Build/license.html" todir="${basedir}/BLT_Build/temp_modl/" />
		<copy todir="${basedir}/BLT_Build/temp_modl/doc">
		    <fileset dir="${basedir}/BLT_Build/doc"/>
		</copy>
		<!-- Echo the version into .version in the bundle and to be saved -->
		<echo message="${BLTTestModule.name}-${BLTTestModule.version}" file="${basedir}/BLT_Build/temp_modl/.version" append="false"/>
		<echo message="${BLTTestModule.name}-${BLTTestModule.name}:${BLTTestModule.release}" file="${basedir}/BLT_Build/.version" append="false"/>
		
		<!-- Zip it all up -->
		<zip zipfile="${basedir}/BLT_Build/modules/${BLTTestModule.name}-module-unsigned.modl" basedir="${basedir}/BLT_Build/temp_modl" />
	</target>

	<!-- Installs BLTTest module in local Ignition gateway. Note that the gateway must be running in developer mode for this to succeed. -->
	<target name="deploy" depends="build" >
		<echo message="Installing ${BLTTestModule.name} on Ignition Gateway." />
		<postmodule posturl="${local.gateway.url}" modulefile="${basedir}/BLT_Build/modules/${BLTTestModule.name}-module-unsigned.modl" />
	</target>	

</project>
