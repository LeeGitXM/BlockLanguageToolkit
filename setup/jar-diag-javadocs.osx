#!/bin/sh
#
# To be run after modifications to the sct projects. Prior to running this
# script, generate javadocs from Eclipse using File->Export. Include all
# SCT projects (except SCT_Build).
#
# Run from the setup area.
PROJECT=sct
USER=chuck
dir=`pwd`
base=`basename $dir`
if [ "$base" != "setup" ]
then
    echo "ERROR: $0: must be executed from the 'setup' directory."
	exit 2
fi
DIST=$dir/../dist
DOC=$dir/../doc
mkdir -p $DIST
cd $DOC
jar -cvf $DIST/$PROJECT-javadocs.jar javadoc
