#!/bin/sh
#
# Save the migration files into a zip for distribution.
#
#set -x
SVN=~/Development/ils/svn/EMChemicals/Release/src
VERS=MIGRATION
TMP=${GIT_REPO}/$VERS
# Cleanup
rm -rf $TMP
cd ${GIT_REPO}
mkdir -p $TMP
cd ${GIT_REPO}/blt/migration
rm -f mdb/*.db
rm -rf tags
cp -a * $TMP
cd mdb
./mkdatabase
cd ..
./clear-json
./copy-json
./migrate-all
mkdir -p $TMP/config
./mktags > $TMP/config/sqltags.xml
cd ..
cp -a migration/json/ignition $TMP

# Now zip and copy to subversion
cd ${GIT_REPO}
zip -r migration.zip $VERS
cp migration.zip $SVN
rm -rf $TMP
