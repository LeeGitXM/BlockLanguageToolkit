#!/bin/sh
#
# Save the external python and accompanying jar files.
#
#set -x
REPO_ROOT=~/Development/ils/src
SVN=~/Development/ils/svn/EMChemicals
VERS=python-src
TMP=$REPO_ROOT/$VERS
# Cleanup
rm -rf $TMP
cd $REPO_ROOT
mkdir $TMP
cd $REPO_ROOT/ils-python
cp -a ILS_Python $TMP
# Copy the jar files ...
cd $REPO/blt
cp -a lib $TMP
# Now zip and copy to subversion
cd $REPO_ROOT
zip -r python-src.zip $VERS
cp python-src.zip $SVN/Release/src
rm -rf $TMP
