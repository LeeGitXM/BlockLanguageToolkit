#!/bin/sh
#
# Save the migration files into a zip for distribution.
# -- also copy the test script library to svn
#
#set -x
SVN=${SVN_REPO}/EMChemicals/Release/src
VERS=REGRESSION
TMP=${GIT_REPO}/$VERS
# Cleanup
rm -rf $TMP
cd ${GIT_REPO}
mkdir -p $TMP/pylib
cd ${GIT_REPO}/blt/regression
cp -a basic $TMP
# pylib is checked into ils-python
cd ${GIT_REPO}/ils-python/ILS_Python/src
cp -a pylib/*.py $TMP/pylib
# Now zip and copy to subversion
cd ${GIT_REPO}/$VERS
zip -r blt-regression.zip * 
cp blt-regression.zip $SVN
rm -rf $TMP
