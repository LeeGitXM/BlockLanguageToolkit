#!/bin/sh
#
# Save build products to the Subversion area for packaging.
# Make sure that the release area has been cleaned and
# VERS, DATE files updated
#
#set -x
SVN=${SVN_REPO}/EMChemicals/Release/src
# Prepare directories
mkdir -p $SVN/config
mkdir -p $SVN/icons
mkdir -p $SVN/bin
mkdir -p $SVN/project
mkdir -p $SVN/modules
mkdir -p $SVN/data
cd ${GIT_REPO}/blt/images
cp -a Block $SVN/icons
cd ${GIT_REPO}/blt/projects
cp blt_block_test.proj $SVN/project
cp basic-diagrams.proj $SVN/project
cd ${GIT_REPO}/blt
cp -a pylibs $SVN/config
cd ${GIT_REPO}
IGN=${SVN_REPO}/EMChemicals/Ignition
cp blt/workspace/BLT_Build/modules/BLT*.modl $IGN

