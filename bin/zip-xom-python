#!/bin/sh
#
# Save the external python and accompanying jar files.
# Split into many categories ... this includes both
# source and "external" python,
#
#set -x
SVN=${SVN_REPO}/EMChemicals/Release/src
# ILS python  ("source" and build)
cd ${GIT_REPO}/ils-python/ILS_Python/src
zip -r $SVN/ils-python.zip ils 
cd ${GIT_REPO}/ils-python
zip -r $SVN/ils-python-src.zip ILS_Python
# XOM python  ("source" and build)
cd ${GIT_REPO}/xom-python/XOM_Python/src
zip -r $SVN/xom-python.zip * 
zip -d $SVN/xom-python.zip xom/emre/\*
cd ${GIT_REPO}/xom-python
zip -r $SVN/xom-python-src.zip XOM_Python

# Copy the jar files ...
cd ${GIT_REPO}/blt
BLD=${GIT_REPO}/blt/workspace/BLT_Build/temp_modl
EXT=${GIT_REPO}/external/lib
rm -rf lib
mkdir -p lib/core/gateway
mkdir -p lib/core/common
cd lib/core
cp $BLD/block-definition.jar gateway
cp $BLD/blt-gateway.jar gateway
cp -a $EXT/commons-math*jar gateway
cp $BLD/blt-common.jar common
cp -a $EXT/ils-common.jar common
cp -a $EXT/ils-common.jar common
cp -a $EXT/jackson* common
cp -a $BLD/blt-common*.gz common
cp -a $BLD/jackson*.gz common
mkdir -p $SVN/python-lib
cd ../..
cp -a lib $SVN/python-lib
